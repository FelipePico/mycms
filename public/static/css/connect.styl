//stylus connect.styl -c -w
body
	align-items center
	background-color #f6f6f6
	display flex
	font-size 18px
	justify-content center
	margin 0px	
	min-height 100vh
 
.mtop16
	margin-top 16px

.box
	background-color #fff
	border-radius 8px
	border 1px solid #d6d6d6
	position relative
	width 500px
	.btn-success
		width 100%
		border 0px 
		background-color #00acff
	.form-control
		&:focus
		&:active
			outline none
			box-shadow none
	.inside
		padding 16px
	.header
		background-color #00acff
		padding 16px
		border-radius 8px 8px 0px 0px
		a 
			img 
				display block
				margin 0px auto
				width 36%
	.footer 
		text-align center
		font-style none !important
		a 
			text-decoration none !important
			display inline-block	
			font-size .8em		
			&:last-child
				margin-left 24px



@media only screen and (max-width 728px)
	.box
		width 88%